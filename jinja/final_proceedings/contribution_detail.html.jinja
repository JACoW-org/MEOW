{% macro render(contribution, class_name) -%}
<section class="{{ class_name }}">

    <h3>
        {{ contribution.code|e }} -
        {{ contribution.start.strftime('%m/%d/%Y, %H:%M') }} /
        {{ contribution.end.strftime('%H:%M') }}
    </h3>

    <h4>{{ contribution.title|e }}</h4>

    <p>{{ contribution.description|e }}</p>

    <p>
        {% for author in contribution.primary_authors %}

        {% if loop.first %}<b>{% endif %}
        {{ author.first }} {{ author.last }} ({{ author.affiliation }})
        {% if loop.first %}</b>{% endif %}

        {% if loop.nextitem is defined %}, {% endif %}

        {% endfor %}
    </p>

    <ul>

        {% if contribution.metadata: %}

        <li>
            <b>Slides:</b>
            <a href="../../pdf/{{ contribution.code|upper }}.pdf">{{ contribution.code|upper }}.pdf</a>
        </li>

        <li>
            <b>Paper:</b>
            <a href="../../pdf/{{ contribution.code|upper }}.pdf">{{ contribution.code|upper }}.pdf</a>
        </li>

        {% endif %}

        <li>
            <b>DOI:</b> reference for this paper -
            <a href="{{ contribution.doi_data.doi_url }}">{{ contribution.doi_data.doi_url }}</a>
        </li>

        <li>
            <b>About:</b>
            paper received <i>26 August 2019</i> -
            paper accepted <i>09 September 2019</i> -
            issue date <i>05 November 2019</i>
        </li>

        {% if contribution.reference: %}

        <li>
            <p>
                <b>Export:</b> reference for this paper using:
            </p>

            <p>
                <b>BibTeX</b>
            <pre>{{ contribution.reference.bibtex|escape|replace('\n','<br>') }}</pre>

            <b>LaTeX</b>
            <pre>{{ contribution.reference.latex|escape|replace('\n','<br>') }}</pre>

            <b>Text/Word</b>
            <pre>{{ contribution.reference.word|escape|replace('\n','<br>') }}</pre>

            <b>RIS</b>
            <pre>{{ contribution.reference.ris|escape|replace('\n','<br>') }}</pre>

            <b>EndNote</b>
            <pre>{{ contribution.reference.endnote|escape }}</pre>
            </p>
        </li>

        {% endif %}

        {% if contribution.metadata: %}

        <li>
            <b>Metadata:</b>
            <pre>{{ contribution.metadata | tojson }}</pre>
        </li>

        {% endif %}

        {% if contribution.keywords: %}

        <li>
            <b>Keywords:</b>
            <pre>{{ contribution.keywords | tojson }}</pre>
        </li>

        {% endif %}

        {% if contribution.doi_data: %}

        <li>
            <b>Doi Data:</b>
            <pre>{{ contribution.doi_data | tojson }}</pre>
        </li>

        {% endif %}

    </ul>

</section>
{%- endmacro %}